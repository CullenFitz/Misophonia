{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"-I${workspaceFolder}/utils/inc",
				"${workspaceFolder}/utils/src/utils.c",
				"${file}",
				"-L/usr/local/lib",
				"-lportaudio",
				"-lsndfile",
				"-lfftw3",
				"-lm",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		},
		{
            "label": "Build C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
				"-I${workspaceFolder}/utils/inc",
				"${workspaceFolder}/utils/src/utils.c",
				"${file}",
				"-L/usr/local/lib",
				"-lfftw3",
				"-lm",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
	]
}